@code {
    public List<Mascota>? Mascotas{ get; set; }

    protected override async Task OnInitializedAsync()
    {
        var ResponseHttp = await repository.Get<List<Mascota>>("/api/mascotas");
        Mascotas = ResponseHttp.Response;
    }
}
